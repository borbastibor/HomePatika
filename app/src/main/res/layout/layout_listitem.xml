<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/sor_nev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Gyógyszer neve"
        android:textColor="#393939"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sor_leiras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:text="Gyógyszer leírása"
        android:textColor="#787878"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/sor_mennyiseg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:text="1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp" />
    <!--A feltételes formázást valahogy így kéne megoldani, csak nem jövök rá a szintaxisra: "android:textColor="@{this.text == 0 ? color/red : color/colorPrimaryDark"}" -->

    <TextView
        android:id="@+id/sor_mennyiseg_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:text="db"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/sor_szavatossagiIdo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sor_nev"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:text=""
        android:textColor="@color/nincsKeszleten"
        android:textSize="10sp"
        android:textStyle="italic" />
</RelativeLayout>